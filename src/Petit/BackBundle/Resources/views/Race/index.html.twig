{% extends 'PetitBackBundle::base.html.twig' %}

{% block body -%}
    <h1>Raza</h1>

    <table class="records_list tdspaced">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Foto</th>
                <th>Edici&oacute;n</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('raza_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nameRace }}</td>
                <td>
                    <img src="{{ asset(entity.webPathBySize(constant('\\Petit\\BackBundle\\Entity\\Race::PICTURE96'))) }}"/>
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('raza_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('raza_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('raza_new') }}">
                Crear nuevo registro
            </a>
        </li>
    </ul>
    {% endblock %}
