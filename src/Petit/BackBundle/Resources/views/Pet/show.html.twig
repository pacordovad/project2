{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pet</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Namepet</th>
                <td>{{ entity.namePet }}</td>
            </tr>
            <tr>
                <th>Birthdaypet</th>
                <td>{{ entity.birthdayPet|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ entity.picture }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Peculiarity</th>
                <td>{{ entity.peculiarity }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('mascota') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('mascota_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
