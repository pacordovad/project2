{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pet list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Namepet</th>
                <th>Birthdaypet</th>
                <th>Picture</th>
                <th>Code</th>
                <th>Peculiarity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('mascota_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.namePet }}</td>
                <td>{% if entity.birthdayPet %}{{ entity.birthdayPet|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.picture }}</td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.peculiarity }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('mascota_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('mascota_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('mascota_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
